<style>

    @font-face {
      font-family: 'Pixelify Sans';
      src: url('fonts/PixelifySans-Regular.ttf') format('truetype');
    }

    @font-face {
      font-family: 'Pixelify Sans';
      src: url('fonts/PixelifySans-Bold.ttf') format('truetype');
      font-weight: bold;
    }

    body {
      font-family: 'Pixelify Sans', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #959595;
    }

    .bg-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('img/homeBackdrop.jpg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      opacity: 0.7;
      z-index: -1;
    }

    .login-link {
      margin-top: 20px;
      color: #ccc;
      font-size: 14px;
    }

    .login-link a {
      color: rgb(209, 186, 129);
      text-decoration: none;
    }

    .login-link a:hover {
      text-decoration: underline;
    }
</style>

<body>
    <div class="bg-container"></div>
    <div class="container mt-5">
    <h2 class="text-center">{{> message}}</h2>
    <div class="login-link">
    <p class="text-center">Thank you for visiting. <a href="/login">Click here</a> to log in again.</p>
    </div>
</div>
</body>
