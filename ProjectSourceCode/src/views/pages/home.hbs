


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Buff Games</title>
  <style>
    @font-face {
      font-family: 'Pixelify Sans';
      src: url('fonts/PixelifySans-Regular.ttf') format('truetype');
      font-weight: normal;
      font-style: normal;
    }

    @font-face {
      font-family: 'Pixelify Sans';
      src: url('fonts/PixelifySans-Medium.ttf') format('truetype');
      font-weight: 500;
      font-style: normal;
    }

    @font-face {
      font-family: 'Pixelify Sans';
      src: url('fonts/PixelifySans-Bold.ttf') format('truetype');
      font-weight: bold;
      font-style: normal;
    }

    .bg-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('img/homeBackdrop.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        opacity: 0.7; 
        z-index: -1;
    }

    body {
      font-family: 'Pixelify Sans';
      text-align: center;
      background-color: #959595;
      margin: 0;
      padding: 0;
    }

    h1 {
      font-weight: bold;
      font-size: 48px;
      margin: 30px 0;
      color: #333;
    }

    .games-wrapper {
      background-color: rgba(0, 0, 0, 0.7);
      border-radius: 30px;
      padding: 40px;
      margin: 20px auto;
      max-width: 90%;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
    }

    .game-container {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
      max-width: 100%;
      margin: 0 auto;
    }

    .game-card {
      background: rgb(209, 186, 129);
      border-radius: 20px;
      box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.1);
      padding: 40px;
      font-size: 32px;
      font-weight: 500;
      cursor: pointer;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      text-decoration: none;
      color: black;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 200px;
    }

    .game-card:hover {
      transform: scale(1.03);
      box-shadow: 0px 8px 14px rgba(0, 0, 0, 0.2);
      color: rgb(5, 109, 22) !important;
    }
    
    /* Wave animation for game card text */
    .game-card .letter {
      display: inline-block;
      transition: transform 0.2s ease;
    }
    
    .game-card:hover .letter {
      animation: wave 1.2s ease-in-out infinite;
    }
    
    .game-card:hover .letter:nth-child(1) { animation-delay: 0s; }
    .game-card:hover .letter:nth-child(2) { animation-delay: 0.1s; }
    .game-card:hover .letter:nth-child(3) { animation-delay: 0.2s; }
    .game-card:hover .letter:nth-child(4) { animation-delay: 0.3s; }
    .game-card:hover .letter:nth-child(5) { animation-delay: 0.4s; }
    .game-card:hover .letter:nth-child(6) { animation-delay: 0.5s; }
    .game-card:hover .letter:nth-child(7) { animation-delay: 0.6s; }
    .game-card:hover .letter:nth-child(8) { animation-delay: 0.7s; }
    .game-card:hover .letter:nth-child(9) { animation-delay: 0.8s; }
    .game-card:hover .letter:nth-child(10) { animation-delay: 0.9s; }
    .game-card:hover .letter:nth-child(11) { animation-delay: 1.0s; }
    .game-card:hover .letter:nth-child(12) { animation-delay: 1.1s; }
    .game-card:hover .letter:nth-child(13) { animation-delay: 1.2s; }
    .game-card:hover .letter:nth-child(14) { animation-delay: 1.3s; }
    .game-card:hover .letter:nth-child(15) { animation-delay: 1.4s; }
    
    @keyframes wave {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    @media (max-width: 768px) {
      .game-container {
        grid-template-columns: 1fr;
      }
      
      .games-wrapper {
        padding: 20px;
      }
    }
  </style>
  <script>
    // Function to wrap each letter in spans without changing the original link structure
    document.addEventListener('DOMContentLoaded', function() {
      const gameCards = document.querySelectorAll('.game-card');
      
      gameCards.forEach(card => {
        // Store the original text content
        const text = card.textContent;
        // Clear the text but keep the link
        card.innerHTML = '';
        
        // Create spans for each letter
        for (let i = 0; i < text.length; i++) {
          const span = document.createElement('span');
          span.className = 'letter';
          span.textContent = text[i];
          card.appendChild(span);
        }
      });
    });
  </script>
</head>
<body>
  <div class="bg-container"></div>
  <h1>Buff Games</h1>

  <div class="games-wrapper">
    <div class="game-container">
      {{#each games}}
        <a href="{{this.link}}" class="game-card">{{this.name}}</a>
      {{/each}}
    </div>
  </div>
</body>
</html>