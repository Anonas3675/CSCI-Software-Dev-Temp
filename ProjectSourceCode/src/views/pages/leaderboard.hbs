      </tbody>
    </table>

    <!-- Crossword -->
    <h2>üß© Crossword</h2>
    <table class="table table-striped leaderboard-table">
      <thead>
        <tr>
          <th>#</th>
          <th>Username</th>
          <th>Highest Streak</th>
        </tr>
      </thead>
      <tbody>
        {{#each crossword}}
