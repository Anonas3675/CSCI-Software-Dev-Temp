      <thead>
        <tr>
          <th>#</th>
          <th>Username</th>
          <th>Highest Streak</th>
        </tr>
      </thead>
      <tbody>
        {{#each wordle}}
        <tr>
          <td>{{addOne @index}}</td>
          <td>{{username}}</td>
          <td>{{highest_streak}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <!-- Trivia -->
    <h2>‚ùì Trivia</h2>
